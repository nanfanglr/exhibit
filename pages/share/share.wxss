/* pages/share/share.wxss */

page {
  background: #f5f5f5;
  padding-bottom: 25rpx;
}

.s-container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.s-item {
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 45%;
  margin-left: 3.33%;
  margin-top: 25rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.s-item image {
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}

.s-item text {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
