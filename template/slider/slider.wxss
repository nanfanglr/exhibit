/*自定义轮播图样式  */

.yxxrui-slider {
  display: block;
}

.yxxrui-slider .slider-item {
  position: relative;
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 0;
}

.yxxrui-slider .slider-form {
  position: relative;
  display: inline-block;
  width: 100%;
}

.yxxrui-slider .slider-img {
  border-radius: 20rpx;
  width: 100%;
  height: 300rpx;
}

.yxxrui-slider .slider-item button {
  line-height: 0;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
  padding-left: 0;
  padding-right: 0;
  border-radius: 20rpx;
}

.yxxrui-slider .slider-indicate-dots {
  line-height: 0;
  z-index: 9999;
  margin-top: -14px;
  padding-bottom: 8px;
  position: relative;
  text-align: center;
}

.yxxrui-slider .slider-indicate-dot {
  width: 6px;
  height: 6px;
  background: rgba(255, 255, 255, 0.5);
  display: inline-block;
  margin-right: 4px;
  border-radius: 100%;
  line-height: 0;
  box-sizing: border-box;
}

.yxxrui-slider .button-hover {
  background: none;
}

.yxxrui-slider .slider-indicate-dot.active {
  background: white;
  width: 16px;
  border-radius: 4px;
}
