/* template/kn-item/kn-item.wxss */
.kn-item-container {
  width: 100%;
  height: 140rpx;
  display: flex;
  padding: 20rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}

.kn-item-content>text {
  display: -webkit-box;
  font-size: 24rpx;
  line-height: 1.2;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.kn-item-container>image {
  border-radius: 6rpx;
  width: 160rpx;
  height: 100rpx;
  overflow: hidden;
  background: lightgray;
  margin-right: 20rpx;
}

.kn-item-content {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
}

.kn-item-cnt {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.kn-item-cnt text {
  margin-left: 10rpx;
}

.kn-item-cnt image {
  width: 40rpx;
  height: 30rpx;
}

/* 选择不是第一个image的子元素 */

.kn-item-cnt image:not(:first-child) {
  margin-left: 10rpx;
}